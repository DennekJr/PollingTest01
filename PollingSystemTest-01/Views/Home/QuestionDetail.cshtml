@model PollingSystemTest_01.Models.PollQuestion

@{
    ViewData["Title"] = "Questions Detail";
}

<h1>Questions Detail</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email) : @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DOC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DOC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PollOptions)
        </dt>
        <dd class="col-sm-10">
            @if (Model.VoteCount > 0)
            {
                @foreach (var t in Model.PollOptions)
                {
                    // dissplay coorrect answer on top
                    if (t.MostVoted == true)
                    {
                        <span>Correct Answer</span>
                        <li>@t.Description</li>
                    }
                }
                @foreach (var t in Model.PollOptions)
                {
                    @if (t.MostVoted == false)
                    {
                        <li>@t.Description</li>
                        @if (ViewBag.userId != @t.UserId)
                        {
                            <li>Up: <span>@t.Votes.Where(t => t.Decision == true).Count()</span><a asp-action="VoteQOrA" asp-route-UAId="@t.Id">Vote Up</a></li>
                            <li>
                                Down: <span>@t.Votes.Where(t => t.Decision == false).Count()</span> <a asp-action="VoteQOrA" asp-route-DAId="@t.Id">Vote Down</a>
                            </li>
                        }


                    }
                }
            }
            else
            {

                @foreach (var t in Model.PollOptions)
                {

                    <form asp-action="QuestionDetail" method="post">
                        <li>@t.Description</li>
                        @if (ViewBag.userId != @t.UserId)
                        {
                            <li><a asp-action="VoteOption" asp-route-VOId="@t.Id">Vote</a></li>
                        }
                    </form>
                }
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
