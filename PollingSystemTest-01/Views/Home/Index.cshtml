@model IEnumerable<PollingSystemTest_01.Models.PollQuestion>
@{
    ViewData["Title"] = "Home Page";
}

<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CreateQuestion">Create Question</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.DOC)
            </td>
            <td>
                Options Count
            </td>
            <td>
                Poll Options
            </td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOC)
                </td>
                <td>
                    @item.PollOptions.Where(x => x.Description != null).Count()
                </td>
                <td style="display:flex; flex-direction: column">
                    @if (@item.PollOptions != null)
                    {
                        @foreach (var t in @item.PollOptions)
                        {
                            <a asp-action="QuestionsWithTag" asp-route-TagId="@t.Id">@t.Description</a>
                        }
                    }
                </td>
                <td>
                    <a asp-action="QuestionsDetail" asp-route-qId="@item.Id">Details</a>
                </td>
                <td>
                    @if (ViewBag.role != null)
                    {
                        <form asp-action="Index" method="Post">
                            @foreach (var itemRole in ViewBag.role)
                            {
                                @if (itemRole == "Admin")
                                {
                                    <button type="submit" asp-route-QId="@item.Id">Delete</button>
                                }
                            }

                        </form>
                    }


                </td>
            </tr>
        }
        <tr>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>

            <th>
                @Html.ActionLink("Date Created", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                @Html.ActionLink("Most Answered", "Index", new { sortOrder = ViewBag.MostAnsweredSortParm })
            </th>
            <th></th>
        </tr>
    </tbody>
</table>
